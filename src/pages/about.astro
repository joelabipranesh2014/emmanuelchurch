    </section>

    <!-- Call to Action -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content animate-on-scroll">
                <h2>Ready to Join Emmanuel Church Tiruchengode?</h2>
                <p>Experience what God can do through you at our church in Tiruchengode, Tamil Nadu</p>
                <div class="cta-buttons">
                    <a href="/events" class="btn btn-primary btn-large">Plan Your Visit</a>
                    <a href="/" class="btn btn-secondary btn-large">Back to Home</a>
                </div>
            </div>
        </div>
    </section>

    </main>
    <Footer />
</BaseLayout>
