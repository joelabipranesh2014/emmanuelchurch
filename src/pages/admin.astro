---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
    title="Admin - Sermon Management | Emmanuel Church Tiruchengode"
    description="Content management system for Emmanuel Church Tiruchengode website"
    type="website"
>
    <!-- Navigation -->
    <header class="header" id="header" role="banner">
        <div class="container">
            <div class="logo">
                <span class="logo-icon">✟</span>
                <span class="logo-text">Emmanuel Church Tiruchengode</span>
            </div>
            <nav class="nav">
                <ul class="nav-list">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li><a href="/sermons" class="nav-link">View Sermons</a></li>
                    <li><a href="/admin" class="nav-link active">Admin</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main id="main-content">
        <div class="admin-container">
            <div class="admin-header">
            <h1>✟ Content Management</h1>
            <p>Add, edit, and manage sermons and song PDFs for your church website</p>
        </div>

        <div class="admin-tabs">
            <button class="admin-tab active" data-tab="add">Add New Sermon</button>
            <button class="admin-tab" data-tab="manage">Manage Sermons</button>
            <button class="admin-tab" data-tab="add-song">Add Song PDF</button>
            <button class="admin-tab" data-tab="manage-songs">Manage Song PDFs</button>
            <button class="admin-tab" data-tab="add-service">Add Service</button>
            <button class="admin-tab" data-tab="manage-services">Manage Services</button>
            <button class="admin-tab" data-tab="add-event">Add Event</button>
            <button class="admin-tab" data-tab="manage-events">Manage Events</button>
        </div>

        <!-- Add Sermon Tab -->
        <div class="admin-tab-content active" id="tab-add">
            <form id="sermon-form" class="sermon-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="sermon-title">Sermon Title *</label>
                        <input type="text" id="sermon-title" name="title" required placeholder="e.g., Faith Over Fear">
                    </div>
                    <div class="form-group">
                        <label for="sermon-speaker">Speaker/Pastor *</label>
                        <input type="text" id="sermon-speaker" name="speaker" required placeholder="e.g., Pastor John Smith">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="sermon-date">Date *</label>
                        <input type="date" id="sermon-date" name="date" required>
                    </div>
                    <div class="form-group">
                        <label for="sermon-series">Series (Optional)</label>
                        <input type="text" id="sermon-series" name="series" placeholder="e.g., See What God Can Do">
                    </div>
                </div>
                <div class="form-group form-full">
                    <label for="sermon-description">Description *</label>
                    <textarea id="sermon-description" name="description" rows="4" required placeholder="Brief description of the sermon..."></textarea>
                </div>
                <div class="form-group form-full">
                    <label for="sermon-youtube">YouTube Video URL *</label>
                    <input type="url" id="sermon-youtube" name="youtube" required placeholder="https://www.youtube.com/watch?v=... or https://youtu.be/...">
                    <small style="color: var(--text-light); display: block; margin-top: 0.5rem;">
                        Paste the full YouTube URL. The video will be embedded automatically.
                    </small>
                    <div id="youtube-preview" class="youtube-preview" style="display: none;"></div>
                </div>
                <div class="form-group form-full">
                    <label for="sermon-audio">Audio Link (Optional)</label>
                    <input type="url" id="sermon-audio" name="audio" placeholder="https://...">
                </div>
                <div class="form-group form-full">
                    <label for="sermon-download">Download Link (Optional)</label>
                    <input type="url" id="sermon-download" name="download" placeholder="https://...">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Sermon</button>
                    <button type="button" class="btn btn-outline" id="reset-form">Reset Form</button>
                </div>
            </form>
        </div>

        <!-- Manage Sermons Tab -->
        <div class="admin-tab-content" id="tab-manage">
            <div class="sermons-list">
                <h2 style="margin-bottom: 1.5rem;">All Sermons (Maximum 7)</h2>
                <div id="sermons-list-container">
                    <div class="empty-state">
                        <p>No sermons added yet. Add your first sermon using the "Add New Sermon" tab.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Song PDF Tab -->
        <div class="admin-tab-content" id="tab-add-song">
            <form id="song-form" class="sermon-form" enctype="multipart/form-data">
                <div class="form-group form-full">
                    <label for="song-title">Song Title *</label>
                    <input type="text" id="song-title" name="title" required placeholder="e.g., Amazing Grace">
                </div>
                <div class="form-group form-full">
                    <label for="song-pdf-file">PDF File *</label>
                    <input type="file" id="song-pdf-file" name="pdfFile" accept=".pdf" required>
                    <small style="color: var(--text-light); display: block; margin-top: 0.5rem;">
                        Select a PDF file from your computer. Maximum file size: 10MB.
                    </small>
                    <div id="song-file-preview" style="margin-top: 1rem; display: none;">
                        <p style="color: var(--primary-color); font-weight: 600;">Selected file: <span id="song-file-name"></span></p>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" id="song-submit-btn">Upload & Add Song PDF</button>
                    <button type="button" class="btn btn-outline" id="reset-song-form">Reset Form</button>
                </div>
            </form>
        </div>

        <!-- Manage Song PDFs Tab -->
        <div class="admin-tab-content" id="tab-manage-songs">
            <div class="sermons-list">
                <h2 style="margin-bottom: 1.5rem;">All Song PDFs (Maximum 7)</h2>
                <div id="songs-list-container">
                    <div class="empty-state">
                        <p>No song PDFs added yet. Add your first song PDF using the "Add Song PDF" tab.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Service Tab -->
        <div class="admin-tab-content" id="tab-add-service">
            <form id="service-form" class="sermon-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="service-time">Service Time *</label>
                        <input type="time" id="service-time" name="time" required>
                    </div>
                    <div class="form-group">
                        <label for="service-title">Service Title *</label>
                        <input type="text" id="service-title" name="title" required placeholder="e.g., First Service">
                    </div>
                </div>
                <div class="form-group form-full">
                    <label for="service-description">Description *</label>
                    <textarea id="service-description" name="description" rows="4" required placeholder="Brief description of the service..."></textarea>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="service-location">Location</label>
                        <input type="text" id="service-location" name="location" placeholder="e.g., Main Sanctuary">
                    </div>
                    <div class="form-group">
                        <label for="service-duration">Duration</label>
                        <input type="text" id="service-duration" name="duration" placeholder="e.g., 75 minutes">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="service-childcare">Childcare</label>
                        <input type="text" id="service-childcare" name="childcare" placeholder="e.g., Available">
                    </div>
                    <div class="form-group">
                        <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                            <input type="checkbox" id="service-featured" name="featured"> Featured Service
                        </label>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Service</button>
                    <button type="button" class="btn btn-outline" id="reset-service-form">Reset Form</button>
                </div>
            </form>
        </div>

        <!-- Manage Services Tab -->
        <div class="admin-tab-content" id="tab-manage-services">
            <div class="sermons-list">
                <h2 style="margin-bottom: 1.5rem;">All Weekly Services</h2>
                <div id="services-list-container">
                    <div class="empty-state">
                        <p>No services added yet. Add your first service using the "Add Service" tab.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Event Tab -->
        <div class="admin-tab-content" id="tab-add-event">
            <form id="event-form" class="sermon-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="event-title">Event Title *</label>
                        <input type="text" id="event-title" name="title" required placeholder="e.g., Christmas Celebration">
                    </div>
                    <div class="form-group">
                        <label for="event-date">Date *</label>
                        <input type="date" id="event-date" name="date" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="event-time">Time</label>
                        <input type="text" id="event-time" name="time" placeholder="e.g., 7:00 PM - Main Sanctuary">
                    </div>
                    <div class="form-group">
                        <label for="event-location">Location</label>
                        <input type="text" id="event-location" name="location" placeholder="e.g., Main Sanctuary">
                    </div>
                </div>
                <div class="form-group form-full">
                    <label for="event-description">Description *</label>
                    <textarea id="event-description" name="description" rows="4" required placeholder="Brief description of the event..."></textarea>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="event-link-text">Link Text</label>
                        <input type="text" id="event-link-text" name="linkText" placeholder="e.g., Learn More">
                    </div>
                    <div class="form-group">
                        <label for="event-link-url">Link URL</label>
                        <input type="url" id="event-link-url" name="linkUrl" placeholder="https://...">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Event</button>
                    <button type="button" class="btn btn-outline" id="reset-event-form">Reset Form</button>
                </div>
            </form>
        </div>

        <!-- Manage Events Tab -->
        <div class="admin-tab-content" id="tab-manage-events">
            <div class="sermons-list">
                <h2 style="margin-bottom: 1.5rem;">All Upcoming Events</h2>
                <div id="events-list-container">
                    <div class="empty-state">
                        <p>No events added yet. Add your first event using the "Add Event" tab.</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>

    <style>
        .admin-container {
            max-width: 1200px;
            margin: 100px auto 50px;
            padding: 0 20px;
        }
        .admin-header {
            background: var(--gradient-1);
            color: white;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            text-align: center;
        }
        .admin-header h1 {
            color: white;
            margin-bottom: 0.5rem;
        }
        .admin-tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            border-bottom: 2px solid var(--bg-light);
        }
        .admin-tab {
            padding: 1rem 2rem;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            color: var(--text-light);
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }
        .admin-tab.active {
            color: var(--primary-color);
            border-bottom-color: var(--primary-color);
        }
        .admin-tab-content {
            display: none;
        }
        .admin-tab-content.active {
            display: block;
        }
        .sermon-form {
            background: var(--bg-white);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
            margin-bottom: 2rem;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        .form-full {
            grid-column: 1 / -1;
        }
        .sermons-list {
            background: var(--bg-white);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
        }
        .sermon-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            border: 1px solid var(--bg-light);
            border-radius: 10px;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        .sermon-item:hover {
            box-shadow: var(--shadow-sm);
            transform: translateX(5px);
        }
        .sermon-item-info h3 {
            margin: 0 0 0.5rem 0;
            color: var(--text-dark);
        }
        .sermon-item-info p {
            margin: 0;
            color: var(--text-light);
            font-size: 0.9rem;
        }
        .sermon-item-actions {
            display: flex;
            gap: 0.5rem;
        }
        .btn-small {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }
        .btn-danger {
            background: #ef4444;
            color: var(--text-dark);
            border: none;
        }
        .btn-danger:hover {
            background: #dc2626;
        }
        .btn-edit {
            background: var(--accent-color);
            color: var(--text-dark);
            border: none;
        }
        .btn-edit:hover {
            background: var(--secondary-color);
        }
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--text-light);
        }
        .youtube-preview {
            margin-top: 1rem;
            padding: 1rem;
            background: var(--bg-light);
            border-radius: 10px;
        }
        .youtube-preview iframe {
            width: 100%;
            height: 200px;
            border-radius: 10px;
        }
        input[type="file"] {
            width: 100%;
            padding: 0.75rem;
            border: 2px dashed var(--bg-light);
            border-radius: 10px;
            background: var(--bg-light);
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }
        input[type="file"]:hover {
            border-color: var(--primary-color);
            background: rgba(26, 36, 33, 0.2);
        }
        input[type="file"]::file-selector-button {
            background: var(--primary-color);
            color: var(--text-dark);
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            margin-right: 1rem;
            transition: all 0.3s ease;
        }
        input[type="file"]::file-selector-button:hover {
            background: var(--secondary-color);
            transform: translateY(-1px);
        }
    </style>
</BaseLayout>
